---
export interface Props {
    sor: string;
    class: string;
}

const { sor, class: className } = Astro.props
---

<div class="flex flex-col justify-center w-auto bg-base-100 shadow-xl my-4 p-3 h-40 w-72 gap-3 rounded-lg">
    <figure class="flex justify-center items-end h-10">
        <i class={className}></i>
    </figure>
    <div class="flex h-auto justify-center items-center h-10">
        <h2 class="text-center">{sor}</h2>
    </div>
</div>
