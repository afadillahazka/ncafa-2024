import Heading2 from "../layouts/components/Heading2.astro";
import HeadingMini from "../layouts/components/HeadingMini.astro";

export async function fetchData() {
  const endpoint = 'https://data.jetadmin.app/projects/inncafa/prod/googlesheets_fyr8/models/database_ti?_no_pagination=true';
  const headers = {
    'Authorization': 'Bearer ni1CIx0V8a43zSwsgVzLOlu0VeZKopHppgqOP5fI',
  }
  
  const response = await fetch(endpoint, { headers });
  if (!response.ok) {
    throw new Error(`HTTP error! status: ${response.status}`);
  }
  const data = await response.json();
  return data; 
}

const journalpartnerDB = await fetchData();
