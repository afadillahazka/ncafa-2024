---
import Paragraph from "../layouts/components/Paragraph.astro";
import Layout from "../layouts/partials/Layout.astro";
import Container from "../layouts/partials/Container2.astro";
import Heading2 from "../layouts/components/Heading2.astro";
import GallerySponsors from "../layouts/components/GallerySponsors.astro";
import ContactContainer from "../layouts/components/ContactContainer.astro";
import Contact from "../layouts/components/ContactSub.astro";
import HeadingMini from "../layouts/components/HeadingMini.astro";

const response = await fetch(
	"https://data.jetadmin.app/projects/inncafa/prod/googlesheets_fyr8/models/sponsors_data",
	{
		headers: {
			Authorization: "Bearer q1ZPkHTDtpqjsmyyspYZ4B2ZK0nq0rqwliw4mCwT",
		},
	},
);

const data = await response.json();
const sponsorsDB = data.results;
---

<Layout title="Sponsors">
	<Container>
		<div class="m-1 flex justify-center flex-col gap-4">
			<!-- Platinum -->
			<HeadingMini text="Platinum Sponsor" />
			<div
				class="flex flex-col flex-wrap justify-center justify-items-center"
			>
				{
					sponsorsDB
						.filter((sponsor) => sponsor.Paket === "Platinum")
						.map((sponsor: any) => (
							<div class="max-w-sm bg-white flex justify-center items-center gap-4 m-4 w-1/2 mx-auto">
								<img
									class="rounded-t-lg aspect-[4/3] object-contain w-full"
									src={sponsor.MediaUrl}
									alt={sponsor.Nama}
								/>
							</div>
						))
				}
			</div>
			<!-- Gold -->
			<HeadingMini text="Gold Sponsor" />
			<div
				class="flex flex-row flex-wrap justify-center justify-items-center"
			>
				{
					sponsorsDB
						.filter((sponsor) => sponsor.Paket === "Gold")
						.map((sponsor: any) => (
							<div class="max-w-sm bg-white flex justify-center items-center gap-4 m-4">
								<img
									class="rounded-t-lg aspect-[4/3] object-contain w-8/12"
									src={sponsor.MediaUrl}
									alt={sponsor.Nama}
								/>
							</div>
						))
				}
			</div>
			<!-- Bronze -->
			<HeadingMini text="Bronze Sponsor" />
			<div
				class="flex flex-row flex-wrap justify-center justify-items-center"
			>
				{
					sponsorsDB
						.filter((sponsor) => sponsor.Paket === "Bronze")
						.map((sponsor: any) => (
							<div class="max-w-sm bg-white flex justify-center items-center gap-4 m-4">
								<img
									class="rounded-t-lg aspect-[4/3] object-contain w-6/12"
									src={sponsor.MediaUrl}
									alt={sponsor.Nama}
								/>
							</div>
						))
				}
			</div>
			<!-- Media Partner
			<HeadingMini text="Media Partner Sponsor" />
			<div
				class="w-3/4 lg:w-1/2 grid grid-cols-7 col-start-3 justify-center justify-items-center md:grid-cols-7 gap-2 py-4 m-auto"
			>
				{
					sponsorsDB
						.filter((sponsor) => sponsor.Paket === "Media Partner")
						.map((sponsor: any) => (
							<div class="flex justify-center">
								<img
									class="h-auto w-2/3 rounded-lg"
									src={sponsor.MediaUrl}
									alt={sponsor.Nama}
								/>
							</div>
						))
				}
			</div> -->
		</div>
	</Container>
	<Container>
		<Heading2 text="Contact Us" />
		<ContactContainer>
			<Contact
				media="WhatsApp "
				,
				class="fa-brands fa-whatsapp fa-2xl py-3 text-black"
				,
				text="+62 881-1675-315 (Ms. Novia)"
				,
				href="wa.me/628811675315"
				,
			/>
			<Contact
				media="Email"
				,
				class="fa-regular fa-envelope fa-2xl py-3 text-black"
				,
				text="in-ncafa@trilogi.ac.id"
				,
				href="https://wa.me/6281288425931"
				,
			/>
			<Contact
				media="Instagram"
				,
				class="fa-brands fa-instagram fa-2xl py-3 text-black"
				,
				text="@in.ncafatrilogi"
				,
				href="wa.me/6281288425931"
				,
			/>
		</ContactContainer>
	</Container>
</Layout>
