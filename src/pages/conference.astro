---
import Jumbotron from "../components/Jumbotron.astro";
import Paragraph from "../components/Paragraph.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Contact from "../components/ContactSub.astro";
import ContactContainer from "../components/ContactContainer.astro";
import Heading2 from "../components/Heading2.astro";
import DateSeminar from "../components/DateSeminar.astro";
import PriceSeminar from "../components/PriceSeminar.astro";
import SpeakerSeminar from "../components/SpeakerSeminar.astro";
import KeynoteSeminar from "../components/KeynoteSeminar.astro"
import Button from "../components/Button.astro";
import ButtonContainer from "../components/ButtonContainer.astro";
import HeadingJumbo from "../components/HeadingJumbo.astro";
import HeadingMini from "../components/HeadingMini.astro";
---

<Layout title="Conference">
	<Jumbotron 
	src="/jumbotron/seminar-3.webp" />
	<Container>
		<Paragraph
			text="This conference gathers various academics, experts and professionals in their respective fields to provide alternative solutions that bridge the gap between theoretical perspectives and research findings in the academic world with practical realities in both the business and public sectors. It is hoped that this conference will also make a constructive contribution by providing recommendations for government policies, especially in the role of accountants in preventing fraudulent behavior, tax regulations, and policies in the capital market and money market sectors."
		/>
	</Container>
	<Container>
		<Heading2 text="Keynote Speech" />
		<KeynoteSeminar/>
		<HeadingMini text="*) to be confirm" />
	</Container>
	<Container>
		<Heading2 text="Speaker" />
		<SpeakerSeminar/>
		<HeadingJumbo text="More to be announce" />
		<HeadingMini text="*) to be confirm" />
	</Container>
	<Container>
		<Heading2 text="Timeline" />
		<DateSeminar />
	</Container>
	<Container>
		<Heading2 text="Price" />
		<PriceSeminar/>
	</Container>
	<Container>
		<Heading2 text="Registration" />
		<ButtonContainer>
			<Button
				href=""
				class="fa-solid fa-user-plus"
				title="Conference Registration"
				description="Click this button to registration."
			/>
		</ButtonContainer>
	</Container>
	<Container>
		<Heading2 text="Contact Us" />
		<ContactContainer>
			<Contact
					media="WhatsApp"
					,
					class="fa-brands fa-whatsapp fa-2xl py-3 text-black"
					,
					text="+62 895-3399-24610 (Mr. Satrio)"
					,
					href="https://wa.me/62895339924610"
					,
				/>
			<Contact
				media="Email"
				,
				class="fa-regular fa-envelope fa-2xl py-3 text-black"
				,
				text="in-ncafa@trilogi.ac.id"
				,
				href=""
				,
			/>
			<Contact
				media="Instagram"
				,
				class="fa-brands fa-instagram fa-2xl py-3 text-black"
				,
				text="@in.ncafatrilogi"
				,
				href=""
				,
			/>
		</ContactContainer>
	</Container>
</Layout>
