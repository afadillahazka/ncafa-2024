---
import Jumbotron from "../components/Jumbotron.astro";
import Paragraph from "../components/Paragraph.astro";
import Layout from "../layouts/Layout.astro";
import Container from "../components/Container.astro";
import Contact from "../components/ContactSub.astro";
import ContactContainer from "../components/ContactContainer.astro";
import Heading2 from "../components/Heading2.astro";
import PricePaper from "../components/PricePaper.astro";
import DatePaper from "../components/DatePaper.astro";
import SORContainer from "../components/SORContainer.astro";
import SOR from "../components/SOR.astro";
import Button from "../components/Button.astro";
import ButtonContainer from "../components/ButtonContainer.astro";
import TableGuideline from "../components/TableGuideline.astro";
---

<Layout title="Call for Paper">
    <Jumbotron 
    src="/jumbotron/callforpaper-desktop.webp" />
    <Container>
        <Paragraph
            text="As a form of contribution to the development of accounting science in Indonesia, it was jointly initiated by the Association of Certified Fraud Examiners (ACFE) Indonesia Chapter and the Association of Public Sector Accounting Educators (APSAE) which was also supported by the Indonesian Institute of Accountants (IAI) Compartment of Accountants Educators for DKI Jakarta Region. As well as during this conference trip, it was also held in collaboration with SINTA Accredited Journals, Index Copernicus, ProQuest, DOAJ, RePec, Google Scholar."
        />
    </Container>
    <Container>
        <Heading2 text="Scope of Research" />
        <SORContainer>
            <SOR
                sor="Financial Accounting and Capital Markets"
                class="fa-solid fa-money-bill-trend-up fa-2xl pb-4"
            />
            <SOR
                sor="Management and Behavioral Accounting"
                class="fa-solid fa-bars-progress fa-2xl pb-4 h-1/2"
            />
            <SOR
                sor="Public Sector Accounting"
                class="fa-solid fa-user fa-2xl pb-4"
            />
            <SOR
                sor="Sharia Accounting"
                class="fa-solid fa-star-and-crescent fa-2xl pb-4"
            />
            <SOR
                sor="Fraud and Forensic Accounting"
                class="fa-solid fa-building-shield fa-2xl pb-4"
            />
            <SOR
                sor="Accounting Education"
                class="fa-solid fa-graduation-cap fa-2xl pb-4"
            />
            <SOR sor="Taxation" class="fa-solid fa-receipt fa-2xl pb-4" />
            <SOR
                sor="Information Systems, Auditing, and Professional Ethics "
                class="fa-solid fa-sitemap fa-2xl pb-4"
            />
            <SOR
                sor="Governance & Sustainability Accounting"
                class="fa-solid fa-users-between-lines fa-2xl pb-4"
            />
        </SORContainer>
    </Container>
    <Container>
        <Heading2 text="Timeline" />
        <DatePaper />
    </Container>
    <!-- <Container>
        <Heading2 text="Guideline" />
        <TableGuideline />
    </Container> -->
    <Container>
        <Heading2 text="Price" />
        <PricePaper />
    </Container>
    <Container>
        <Heading2 text="Submission and Registration" />
        <ButtonContainer>
            <Button
                href=""
                class="fa-solid fa-user-plus"
                title="Paper Submission"
                description="Click this button to submit your paper."
            />
        </ButtonContainer>
        <ButtonContainer>
            <Button
                href=""
                class="fa-solid fa-user-plus"
                title="Paper Registration"
                description="Click this button to registration call for paper."
            />
        </ButtonContainer>
    </Container>
    <Container>
        <Heading2 text="Terms and Conditions" />
        <ButtonContainer>
            <Button
                href=""
                class="fa-solid fa-download"
                title="Abstract Template"
                description="Click this button to download Abstract Template."
            />
        </ButtonContainer>
        <ButtonContainer>
            <Button
                href=""
                class="fa-solid fa-download"
                title="Full Paper Template"
                description="Click this button to download Full Paper Template."
            />
        </ButtonContainer>

    </Container>
    <Container>
        <Heading2 text="Contact Us" />
        <ContactContainer>
            <Contact
					media="WhatsApp"
					,
					class="fa-brands fa-whatsapp fa-2xl py-3 text-black"
					,
					text="+62 851-5701-1792 (Ms. Endah)"
					,
					href="https://wa.me/6285157011792"
					,
				/>
            <Contact
                media="Email"
                ,
                class="fa-regular fa-envelope fa-2xl py-3 text-black"
                ,
                text="in-ncafa@trilogi.ac.id"
                ,
                href=""
                ,
            />
            <Contact
                media="Instagram"
                ,
                class="fa-brands fa-instagram fa-2xl py-3 text-black"
                ,
                text="@in.ncafatrilogi"
                ,
                href=""
                ,
            />
        </ContactContainer>
    </Container>
</Layout>
